{
  "description": "Legacy Roblox badges API integration yippee!",
  "usage": {
    "full_record": "{{#invoke:roapid|badges|<badgeId>}}",
    "field": "{{#invoke:roapid|badges|<badgeId>|displayName}}",
    "nested_field": "{{#invoke:roapid|badges|<badgeId>|statistics|awardedCount}}",
    "index": "{{#invoke:roapid|badges}} - Returns this usage guide."
  },
  "fields": [
    "id",
    "name",
    "description",
    "displayName",
    "displayDescription",
    "enabled",
    "iconImageId",
    "displayIconImageId",
    "created",
    "updated",
    "statistics",
    "statistics.pastDayAwardedCount",
    "statistics.awardedCount",
    "statistics.winRatePercentage",
    "awardingUniverse",
    "awardingUniverse.id",
    "awardingUniverse.name",
    "awardingUniverse.rootPlaceId"
  ],
  "examples": [
    "{{#invoke:roapid|badges|3964419828587997}}",
    "{{#invoke:roapid|badges|3964419828587997|displayDescription}}",
    "{{#invoke:roapid|badges|3964419828587997|statistics|awardedCount}}"
  ]
}
